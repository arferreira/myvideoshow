<div class="row videos">
  <div class="col s8 offset-s2">
    <p class="title">Vídeos</p>
  </div>

  <div class="row cards">
    <div class="col s8 offset-s2">

      <% @videos.each do |v| %>
        <div class="card horizontal">
          <div class="card-content col s12">
            <div class="col s12 l8 m12">
              <div class="row">
                <div class="col s8 m9 l9">
                  <p class="title"><%= truncate(v.name, length: 30, omission: '...') %></p>
                </div>
                <div class="col s4 m2 l2">
                  <p class="data"><%= (v.created_at)? v.created_at.strftime("%d/%m/%Y") : '' %></p>
                </div>
              </div>
              <div class="row">
                <div class="col s12 m12 l12">
                  <p class="subtitle"><%= truncate(v.description, length: 70, omission: '...') %></p>
                </div>
              </div>
              <div class="row status">
                <div class="col s6 m6 l4 visibility">
                  <i class="material-icons visibility-icon">visibility</i>
                  <span class="visibility-text">Visualizações </span>
                </div>
                <div class="col s2 m2 offset-s4 l2 offset-l6">
                  <span class="new badge <%= (v.status == "inactive")? 'orange' : '' %>"> <%= (v.status == "inactive")? 'Inativo' : 'Ativo' %> </span>
                </div>
              </div>
            </div>
            <div class="col l4 s12 m12 center enter">
              <div class="row">
                <div class="col s12">
                  <a class="waves-effect waves-light btn btn-small" href=<%= "/videos/#{v.id}" %>>Abrir</a>
                </div>
              </div>
            </div>
          </div>
        </div>
      <% end %>

    </div>
  </div>

  <div class="fixed-action-btn campaigns-btn">
    <%= form_tag("/videos", method: "post") do %>
      <button class="btn-floating btn-large purple pulse" type="submit">
        <i class="large material-icons">add</i>
      </button>
    <% end %>
  </div>
</div>